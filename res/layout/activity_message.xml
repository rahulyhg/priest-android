<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/green" >

        <ImageView
            android:id="@+id/return_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/title_return" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/chat_title_name"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/message_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/docgrey"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageButton
                android:id="@+id/more_options_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/more_options_icon"/>
            <EditText 
                android:id="@+id/input_frame"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:background="@drawable/bg_input"/>
            <ImageButton
                android:id="@+id/send_message_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/send_message_icon"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/more_options_holder"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageButton 
                android:id="@+id/send_image"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/send_image_icon"/>
            <ImageButton 
                android:id="@+id/send_audio"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/send_audio_icon"/>
            <ImageButton 
                android:id="@+id/send_video"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/send_video_icon"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>