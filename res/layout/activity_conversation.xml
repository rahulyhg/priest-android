<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:orientation="vertical"
	android:background="@color/white">
	<RelativeLayout
		android:id="@+id/conversation_layout_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/main"
        android:focusable="true">
		<ImageView
		    android:id="@+id/conversation_image_scan"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
			android:layout_centerVertical="true"
			android:scaleType="centerInside"
			android:src="@drawable/icon_scan" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerInParent="true"
			android:layout_centerVertical="true"
			android:text="联系人"
			android:textColor="#ffffffff"
			android:textSize="18sp" />
		<ImageView
		    android:id="@+id/conversation_image_add"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
			android:layout_centerVertical="true"
			android:scaleType="fitXY"
			android:src="@drawable/add"
			android:focusable="true"
			android:focusableInTouchMode="true" />
    </RelativeLayout>
	<RelativeLayout
        android:id="@+id/conversation_layout_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/grey_bg">
		<EditText
            android:id="@+id/search_text_keword"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_search_white"
            android:text=""
            android:hint="搜索联系人"
            android:textColor="@color/grey_text"
            android:textSize="15sp"
            android:singleLine="true"
            android:paddingLeft="40dp" />
		<ImageButton
            android:id="@+id/search_button_confirm"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:background="@color/transprant"
            android:src="@drawable/icon_search_grey"
            android:scaleType="fitXY" />
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/conversation_layout_group"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:orientation="horizontal">
		<RelativeLayout
			android:id="@+id/conversation_layout_doctor"
		    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center"
    		android:layout_weight="1">
			<ImageView
				android:id="@+id/conversation_image_doctor"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:scaleType="fitXY"
				android:src="@drawable/icon_conversation_doctor" />			
			<TextView
				android:id="@+id/conversation_label_doctor"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/conversation_image_doctor"
				android:layout_marginTop="2dp"
				android:layout_centerHorizontal="true"
				android:textColor="@color/black"
				android:text="医生" />
    	</RelativeLayout>
    	<View 
	    	android:layout_height="match_parent"
	    	android:layout_width="1dp"
	    	android:background="@color/grey_line"/>
		<RelativeLayout
			android:id="@+id/conversation_layout_patient"
		    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center"
    		android:layout_weight="1">
			<ImageView
				android:id="@+id/conversation_image_patient"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:scaleType="fitXY"
				android:src="@drawable/icon_conversation_patient" />			
			<TextView
				android:id="@+id/conversation_label_patient"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/conversation_image_patient"
				android:layout_marginTop="2dp"
				android:layout_centerHorizontal="true"
				android:textColor="@color/black"
				android:text="患者" />
    	</RelativeLayout>
	</LinearLayout>
	<TextView
		android:id="@+id/conversation_label_caption"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="6dp"
		android:paddingTop="2dp"
		android:paddingBottom="2dp"
		android:text="联系人"
		android:background="@color/grey_bg"
		android:textColor="@color/grey_text"
		android:textSize="15sp" />
    <ListView
        android:id="@+id/conversation_list_doctor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/conversation_label_caption"
        android:background="@color/white"
        android:divider="@drawable/divider"
        android:visibility="gone" />
	<ListView
        android:id="@+id/conversation_list_patient"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/conversation_label_caption"
        android:background="@color/white"
        android:divider="@drawable/divider"
        android:visibility="gone" />
</LinearLayout>
