<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
		android:id="@+id/home_layout_head"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_alignParentTop="true"
		android:focusable="true"
		android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/home_button_notify"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/bell_normal" />
        <Button
            android:id="@+id/home_button_search"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/home_button_region"
            android:layout_toLeftOf="@id/home_button_notify"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/button_search_grey"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="病人/文章"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <ImageView 
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/home_button_notify"
            android:layout_marginRight="47dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_search"
            android:scaleType="fitXY"
            />
	</RelativeLayout>
    <ListView
        android:id="@+id/home_list_news"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/hot_bg"
        android:divider="@drawable/divider" />
</RelativeLayout>
