<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="false" >

    <LinearLayout
        android:id="@+id/received_message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:clickable="false" >
        <ImageView
            android:id="@+id/received_contact_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/photo_default" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
	            <TextView
	                android:id="@+id/received_message"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/msg_received_bg"
	                android:padding="15dp"
	                android:textColor="@color/black"
	                android:textSize="16sp" />
	            <ImageView
	                android:id="@+id/received_file"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:visibility="gone" />
            </RelativeLayout>
            <TextView
                android:id="@+id/received_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/midgrey"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sent_message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/sent_contact_photo"
            android:orientation="vertical" >
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
	            <TextView
	                android:id="@+id/sent_message"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:background="@drawable/msg_sent_bg"
	                android:padding="15dp"
	                android:textColor="@color/white"
	                android:textSize="16sp" />
                <ImageView
	                android:id="@+id/sent_file"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:visibility="gone" />
            </RelativeLayout>
            <TextView
                android:id="@+id/sent_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/midgrey"
                android:textSize="16sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/sent_contact_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:background="@drawable/photo_default" />
    </RelativeLayout>

</LinearLayout>