<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="false" >

    <LinearLayout
        android:id="@+id/received_message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:clickable="false" >
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/received_contact_photo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/photo_default" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
	            <TextView
	                android:id="@+id/received_message"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:background="@color/docgrey"
	                android:padding="15dp"
	                android:textColor="@color/black"
	                android:textSize="16sp" />
	            <ImageView
	                android:id="@+id/received_file"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:visibility="gone" />
            </RelativeLayout>
            <TextView
                android:id="@+id/received_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/lightgrey"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sent_message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="false"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="vertical" >
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
	            <TextView
	                android:id="@+id/sent_message"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:background="@color/green"
	                android:padding="15dp"
	                android:textColor="@color/white"
	                android:textSize="16sp" />
                <ImageView
	                android:id="@+id/sent_file"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:visibility="gone" />
            </RelativeLayout>
            <TextView
                android:id="@+id/sent_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/lightgrey"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/sent_contact_photo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/photo_default" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>