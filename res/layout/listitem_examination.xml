<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
	    android:orientation="horizontal">
        <TextView
            android:id="@+id/listitem_examination_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="报告编号：00000000"
            android:textColor="@color/grey_text"
            android:textSize="14sp" />
	</RelativeLayout>
	<View 
		android:layout_width="fill_parent"
		android:layout_height="1px"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="@color/grey_bg" />
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/white">
	    <ImageView
			android:id="@+id/listitem_examination_image_icon"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:scaleType="fitXY"
	        android:src="@color/black" />
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/listitem_examination_image_icon"
	        android:layout_marginLeft="5dp"
	        android:orientation="vertical" >
	        <TextView
	            android:id="@+id/listitem_examination_label_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginTop="2dp"
	            android:text="项目：报告标题"
	            android:textColor="@color/grey_text"
	            android:textSize="15sp" />
	        <TextView
	            android:id="@+id/listitem_examination_label_description"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@id/listitem_examination_label_title"
	            android:layout_marginTop="2dp"
	            android:layout_marginRight="2dp"
	            android:singleLine="false"
	            android:lines="2"
	            android:text="简介："
	            android:textColor="@color/grey_text"
	            android:textSize="15sp" />
	        <TextView
	            android:id="@+id/listitem_examination_label_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_below="@id/listitem_examination_label_description"
	            android:layout_marginTop="2dp"
	            android:layout_marginBottom="2dp"
	            android:layout_marginRight="2dp"
	            android:text="2016-01-10"
	            android:textColor="@color/grey_text"
	            android:textSize="13sp" />
		</RelativeLayout>
	</RelativeLayout>
</LinearLayout>